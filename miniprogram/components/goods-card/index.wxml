				  class="goods-card__add-cart"
				  prefix="wr"
				  name="group_buy"
				  id="{{goods.id}}-cart"
				  data-id="{{goods.id}}"
				  catchtap="addCartHandle"
				  size="48rpx"
				  color="#FA550F"
				/>
			</view>
		</view>
